generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Acompanhamentos {
  id    String  @id @default(uuid())
  nome  String
  preco Decimal
}

model Frutas {
  id    String  @id @default(uuid())
  nome  String
  preco Decimal
}

model Cremes {
  id    String  @id @default(uuid())
  nome  String
  preco Decimal
}

model TamanhoCoposAcai {
  id      String  @id @default(uuid())
  tamanho String
  preco   Decimal
}

model Item {
  id       String  @id @default(uuid())
  nome  String
  categoria String
  preco    Decimal

  Pedido   Pedido? @relation(fields: [pedidoId], references: [id])
  pedidoId String?
}

model Pedido {
  id          String @id @default(uuid())
  nomeCliente String
  itens       Item[]
}
